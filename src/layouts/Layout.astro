---
import "@/styles/global.css";

import SEO from "./SEO.astro";

interface Props {
	title: string;
	description: string;
	image: string;
}

const {
	title = "Astro",
	description = "Starting Template",
	image = "https://unavatar.io/unknown",
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<SEO {...Astro.props} />
	</head>
	<body>
		<main>
			<slot />
		</main>
	</body>
</html>

<style is:global>
	@import "tailwindcss";
</style>
